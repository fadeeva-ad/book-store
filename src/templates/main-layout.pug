include ../mixins.pug

doctype html
html(class="no-js  page", lang="ru")

	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')

		block meta
			title Home

		block head
			link(rel="stylesheet", href="css/style.css")
			//- link(rel="stylesheet", type="text/javascript" href="../../node_modules/slick-carousel/slick/slick.css")
			//- link(rel="stylesheet",type="text/javascript", href="../../node_modules/slick-carousel/slick/slick-theme.css")
			link(rel="shortcut icon", href="/img/favicon.ico", type="image/x-icon")
			script.
				document.documentElement.className = document.documentElement.className.replace('no-js', 'js');

	body
		.main-layout-wrap
			+b-header-page()
			block nav
		block content
		+main-footer()


		block page-bottom
			script(src="js/script.min.js")
